@model TaskItem
<div class="row justify-content-center">
    <!--This form will gather the necessary information for each movie submission-->
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="MovieId" />
        <div>
            <label asp-for="Category">Category:</label>
            <input asp-for="Category" />
        </div>

        <div>
            <label asp-for="Title">Title:</label>
            <input asp-for="Title" />
        </div>

        <div>
            <label asp-for="Year">Year:</label>
            <input asp-for="Year" />
        </div>

        <div>
            <label asp-for="Director">Director:</label>
            <input asp-for="Director" />
        </div>

        <!--Rating will use a drop-down menu-->
        <div>
            <label asp-for="Rating">Rating:</label>
            <select asp-for="Rating">
                <option value="">Select One</option>
                <option value="g">G</option>
                <option value="pg">PG</option>
                <option value="pg-13">PG-13</option>
                <option value="r">R</option>
            </select>
        </div>

        <!--Edited will also use a drop-down menu-->
        <div>
            <label asp-for="Edited">Edited:</label>
            <select asp-for="Edited">
                <option value="">Select One</option>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>

        <div>
            <label asp-for="Lent">Lent to:</label>
            <input asp-for="Lent" />
        </div>

        <div>
            <label asp-for="Notes">Notes:</label>
            <input asp-for="Notes" />
        </div>

        <!--The creation of the submit button as well as the necessary code to implement validation as found in the movie response view-->
        <button class="btn btn-success btn-lg" type="submit" value="Calculate" id="submitButton">Submit</button>
        <div asp-validation-summary="All"></div>
        <a asp-action="Display" class="btn btn-primary btn-lg" role="button">View Submissions</a><br /><br />
        <a asp-action="Index" class="btn btn-outline-dark btn-lg" role="button">Home</a>

    </form>
</div>